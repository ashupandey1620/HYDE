<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AuthenticationActivity">

    <ImageView
        android:id="@+id/imgBackground"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@color/color20"
        android:src="@drawable/hyde3"
        android:scaleType="fitCenter"
        android:contentDescription="@string/logo_of_the_app"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/imgBackground"
        android:layout_marginTop="-30dp"
        android:background="@drawable/view_bg"
        android:id="@+id/firstLayout"
        android:orientation="vertical"

        >
        <com.google.android.material.tabs.TabLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/view_bg"
            android:id="@+id/tabLayoutAuthentication"

            />
        <androidx.viewpager2.widget.ViewPager2
            android:layout_width="match_parent"
            android:layout_height="440dp"
            android:id="@+id/viewPagerAuthentication"
            />

    </LinearLayout>
</RelativeLayout>