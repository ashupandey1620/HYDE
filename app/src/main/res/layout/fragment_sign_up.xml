<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    android:background="@color/color6"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SignUp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:id="@+id/EnterEmail"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:hint="@string/enter_email"
            android:textColorHint="@color/color2"
            app:boxStrokeColor="@color/color2"
            app:endIconTint="@color/color2"
            app:endIconMode="clear_text"
            app:startIconTint="@color/color2"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="text"
                android:id="@+id/EnterEmailTIET"
                android:textColor="@color/color2"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:id="@+id/EnterYourPassword"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:hint="Enter Your Password"
            android:textColorHint="@color/color2"
            app:boxStrokeColor="@color/color2"
            android:layout_marginTop="15dp"
            app:endIconTint="@color/color2"
            app:endIconMode="clear_text"
            app:startIconTint="@color/color2"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="text"
                android:id="@+id/EnterYourPasswordTIET"
                android:textColor="@color/color2"
                />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:id="@+id/ConfirmYourPassword"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:hint="Confirm Your Password"
            android:textColorHint="@color/color2"
            app:boxStrokeColor="@color/color2"
            app:endIconTint="@color/color2"
            android:layout_marginTop="15dp"
            app:endIconMode="clear_text"
            app:startIconTint="@color/color2"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="text"
                android:id="@+id/ConfirmYourPasswordTIET"
                android:textColor="@color/color2"
                />
        </com.google.android.material.textfield.TextInputLayout>


        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:id="@+id/SignUpButton"
            android:text="@string/sign_up"
            android:textColor="@color/color2"
            android:background="@color/color3"
            android:textSize="25sp"
            />

        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:visibility="gone"
            android:id="@+id/signUpProgressBar"
            />

    </LinearLayout>


</ScrollView>